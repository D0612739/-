<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationDetailedContentActivity">

    <TextView
        android:id="@+id/notification_detailedcontent_orderid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notification_detailedcontent_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/notification_detailedcontent_orderid"
        app:layout_constraintTop_toBottomOf="@+id/notification_detailedcontent_orderid" />

    <TextView
        android:id="@+id/notification_detailedcontent_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/notification_detailedcontent_title"
        app:layout_constraintTop_toBottomOf="@+id/notification_detailedcontent_title" />

    <TextView
        android:id="@+id/notification_detailedcontent_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/notification_detailedcontent_time"
        app:layout_constraintTop_toBottomOf="@+id/notification_detailedcontent_time" />

    <Button
        android:id="@+id/notification_detailedcontent_checkorder_btn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="60dp"
        android:text="查看訂單 >"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/notification_detailedcontent_content"
        app:layout_constraintTop_toBottomOf="@+id/notification_detailedcontent_content" />
</androidx.constraintlayout.widget.ConstraintLayout>