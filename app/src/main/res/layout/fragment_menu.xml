<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MenuFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="406dp"
            android:layout_height="510dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_hamburger"
                    android:layout_width="match_parent"
                    android:layout_height="297dp"
                    android:src="@drawable/hamburger" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_hamburger"
                        android:layout_width="67dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="漢堡"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/spn_hamburger"
                        android:layout_width="309dp"
                        android:layout_height="62dp"
                        android:layout_weight="1" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_hamburger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="選擇>"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/iv_sandwich"
                    android:layout_width="match_parent"
                    android:layout_height="333dp"
                    android:foreground="@drawable/sandwich"
                    android:src="@drawable/bun"
                    app:srcCompat="@drawable/sandwich"
                    tools:srcCompat="@drawable/sandwich" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_sandwich"
                        android:layout_width="67dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="三明治"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/spn_sandwich"
                        android:layout_width="307dp"
                        android:layout_height="63dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_sandwich"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="選擇>" />

                <ImageView
                    android:id="@+id/iv_eggroll"
                    android:layout_width="match_parent"
                    android:layout_height="314dp"
                    android:src="@drawable/eggroll" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_eggroll"
                        android:layout_width="67dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="蛋餅"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/spn_eggroll"
                        android:layout_width="302dp"
                        android:layout_height="63dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_eggroll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="選擇>" />

                <ImageView
                    android:id="@+id/iv_drink"
                    android:layout_width="match_parent"
                    android:layout_height="294dp"
                    android:src="@drawable/drink" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_drink"
                        android:layout_width="67dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="飲料"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/spn_drink"
                        android:layout_width="306dp"
                        android:layout_height="63dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_drink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="選擇>"
                    android:textAlignment="center" />

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>