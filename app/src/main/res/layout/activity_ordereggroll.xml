<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ordereggroll">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="95dp"
        android:layout_height="31dp"
        android:layout_marginTop="20dp"
        android:text="餐點份數:"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_meal_add_eggroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="99dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:text="餐點名稱:"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/et_meal_name_eggroll"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/et_meal_name_eggroll"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_marginEnd="100dp"
        android:background="@null"
        android:ems="10"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/btn_meal_add_eggroll"
        android:layout_width="43dp"
        android:layout_height="47dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:text="+"
        app:layout_constraintEnd_toStartOf="@+id/et_meal_number_eggroll"
        app:layout_constraintTop_toBottomOf="@+id/et_meal_name_eggroll" />

    <EditText
        android:id="@+id/et_meal_number_eggroll"
        android:layout_width="39dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:inputType="text"
        android:text="1"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/btn_meal_submit_eggroll"
        app:layout_constraintTop_toBottomOf="@+id/et_meal_name_eggroll" />

    <Button
        android:id="@+id/btn_meal_submit_eggroll"
        android:layout_width="43dp"
        android:layout_height="47dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="124dp"
        android:text="-"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_meal_name_eggroll" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="餐點備註:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <MultiAutoCompleteTextView
        android:id="@+id/et_meal_remark_eggroll"
        android:layout_width="342dp"
        android:layout_height="78dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <Button
        android:id="@+id/btn_cart_eggroll"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:text="加入購物車"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_meal_remark_eggroll" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="406dp"
        android:layout_height="297dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/eggroll" />

</androidx.constraintlayout.widget.ConstraintLayout>